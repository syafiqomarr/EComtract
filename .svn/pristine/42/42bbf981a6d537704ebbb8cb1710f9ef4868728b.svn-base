<wicket:extend>
	<form wicket:id="form">
		<div class="ui right aligned grid form">
			<div class="left floated left aligned six wide column">
				<div class="ui ">
					<div class="ui top attached segment">
						<div class="ui top attached label">
							<h4 class="ui header">
								<wicket:message key="page.lbl.ezbiz.otcPayment.paymentSearch" />
							</h4>
						</div>
						<table style="width: 100%">
							<tr>
								<td>
									<div class="field">
										<label><span wicket:id="transactionIdLabel" /></label> <input
											type="text" wicket:id="transactionId" autofocus>
									</div>
								</td>
							</tr>
							<tr>
								<td>
									<div class="field">
										<label><span wicket:id="appRefNoLabel" /></label> <input
											type="text" wicket:id="appRefNo">
									</div>
								</td>
							</tr>
							<tr>
								<td>
									<div class="field">
										<label><span wicket:id="icNoLabel" /></label> <input
											type="text" wicket:id="icNo">
									</div>
								</td>
							</tr>
								<tr>
									<td>
									<wicket:enclosure child="date">
										<div class="field">
											<label><span wicket:id="dateLabel" /></label> <input
												type="text" wicket:id="date">
										</div>
									</wicket:enclosure>
									</td>
								</tr>
							
							<tr>
								<td>&nbsp;</td>
							</tr>
							<tr>
								<td><input wicket:id="search" type="button"
									class="ui primary button" value="Search" /></td>
							</tr>
						</table>
					</div>
				</div>
			</div>
			<div class="right floated right aligned six wide column">
				<div class="ui vertical buttons">
					<div class="ui primary left labeled icon button counterinfo">
						<wicket:message key="page.lbl.ezbiz.otcPayment.counterInfoButton" />
						<i class="info icon"></i>
					</div>
					<div class="ui primary left labeled icon button" wicket:id="creditNote">
						<wicket:message key="page.lbl.ezbiz.otcPayment.creditNoteButton" />
						<i class="money icon"></i>
					</div>
					<div class="ui primary left labeled icon button" wicket:id="viewReceipt">
						<wicket:message key="page.lbl.ezbiz.otcPayment.viewReceipt" />
						<i class="print icon"></i>
					</div>
				</div>
			</div>
		</div>
		<div class="ui modal small">
			<i class="close icon"></i>
			<div class="header">
				<wicket:message key="page.lbl.ezbiz.otcPayment.counterInfo" />
			</div>
			<div class="content">
				<div class="ui equal width grid">
					<div class="column center aligned">
						<label><wicket:message
								key="page.lbl.ezbiz.otcPayment.userId" /></label><br> <span
							style="font-size: 20px" wicket:id="userId"></span>
					</div>
					<div class="column center aligned">
						<label><wicket:message
								key="page.lbl.ezbiz.otcPayment.counterName" /></label><br> <span
							style="font-size: 20px" wicket:id="counterName"></span>
					</div>
					<div class="column center aligned">
						<label><wicket:message
								key="page.lbl.ezbiz.otcPayment.branch" /></label><br> <span
							style="font-size: 20px" wicket:id="branch"></span>
					</div>
					<div class="column center aligned">
						<label><wicket:message
								key="page.lbl.ezbiz.otcPayment.floorLevel" /></label><br> <span
							style="font-size: 20px" wicket:id="floorLevel"></span>
					</div>
					<div class="equal width row">
						<div class="column center aligned">
							<label><wicket:message
									key="page.lbl.ezbiz.otcPayment.checkinDate" /></label><br> <span
								style="font-size: 20px" wicket:id="checkinDate"></span>
						</div>
						<div class="column center aligned">
							<label><wicket:message
									key="page.lbl.ezbiz.otcPayment.counterStatus" /></label><br> <span
								style="font-size: 20px">Open</span>
						</div>
						<div class="column center aligned">
						<label><wicket:message
								key="page.lbl.ezbiz.otcPayment.balancingStatus" /></label><br><span
							style="font-size: 20px" wicket:id="balancingStatus"></span>
						</div>
					</div>
				</div>
				<h4 class="ui horizontal divider header">
					<i class="money icon"></i>
					TRANSACTIONS
				</h4>
				<div class="ui equal width grid">
					<div class="column center aligned">
						<label><wicket:message
								key="page.lbl.ezbiz.otcPayment.countActivity" /></label><br> <span
							style="font-size: 20px" wicket:id="countActivity"></span>
					</div>
					<div class="column center aligned">
						<label><wicket:message
								key="page.lbl.ezbiz.otcPayment.totalTransaction" /></label><br> <span
							style="font-size: 20px" wicket:id="countTransactions"></span>
					</div>
					<div class="column center aligned">
						<label><wicket:message
								key="page.lbl.ezbiz.otcPayment.countCreditNote" /></label><br> <span
							style="font-size: 20px" wicket:id="countCreditNote"></span>
					</div>
				</div>
			</div>
			<div class="actions">
				<div class="ui negative deny icon button">
					Back
				</div>
				<div class="ui primary right labeled icon button"
					wicket:id="checkout">
					Check Out <i class="checkmark icon"></i>
				</div>
			</div>
		</div>
		
	</form>
	<div wicket:id="wmcSearchResult">
		<table class="ui striped table">
			<thead>
				<tr>
					<th><wicket:message
							key="page.lbl.ezbiz.otcPaymentPage.transactionId" /></th>
					<th><wicket:message
							key="page.lbl.ezbiz.otcPaymentPage.appRefNo" /></th>
					<th><wicket:message
							key="page.lbl.ezbiz.otcPaymentPage.payerName" /></th>
					<th><wicket:message
							key="page.lbl.ezbiz.otcPaymentPage.payerId" /></th>
					<th><wicket:message
							key="page.lbl.ezbiz.otcPaymentPage.requestDt" /></th>
					<th><wicket:message key="page.lbl.ezbiz.otcPaymentPage.amount" /></th>
					<th><wicket:message key="page.lbl.ezbiz.otcPayment.action" /></th>
				</tr>
			</thead>
			<tbody>
				<tr wicket:id="sorting">
					<td><span wicket:id="transactionId">[transactionId]</span></td>
					<td><span wicket:id="appRefNo">[appRefNo]</span></td>
					<td><span wicket:id="payerName">[payerName]</span></td>
					<td><span wicket:id="payerId">[payerId]</span></td>
					<td><span wicket:id="requestDt">[requestDt]</span></td>
					<td><span wicket:id="amount">[amount]</span></td>
					<td class="manage-link">
					<wicket:enclosure child="makePayment"> 
						<a wicket:id="makePayment" href="#">
								<div class="ui vertical animated button mini blue" tabindex="0">
									<div class="hidden content">Pay</div>
									<div class="visible content">
										<i class="dollar icon"></i>
									</div>
								</div>
						</a>
					</wicket:enclosure>
					<wicket:enclosure child="paymentNotPending"> 
						<span wicket:id="paymentNotPending" />
					</wicket:enclosure>
					
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<th colspan="100"><span wicket:id="navigatorLabel">[dataView
							navigatorLabel]</span> <span wicket:id="navigator">[dataView
							navigator]</span></th>
				</tr>
			</tfoot>
		</table>
	</div>

	<script>
	$('.counterinfo').on('click', function(){
		$('.ui.modal').modal('show');
	});
	</script>
</wicket:extend>
