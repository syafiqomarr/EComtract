<wicket:extend>
	<br>
	<div class="ui middle aligned center aligned grid">
		<div class="column">
			<h2 class="ui primary image header">
				<div class="content">Officer Login</div>
			</h2>
			<form class="ui large form" wicket:id="loginForm">
				<div class="ui stacked segment">
					<div class="field">
						<div class="ui left icon input">
							<i class="user icon"></i> <label><span wicket:id="usernameLabel" hidden="true"/></label>
							<input wicket:id="username" type="text" name="email" placeholder="Username">
						</div>
					</div>
					<div class="field">
						<div class="ui left icon input">
							<i class="lock icon"></i> <label><span wicket:id="passwordLabel" hidden="true"/></label>
							 <input wicket:id="password" type="password" name="password" placeholder="Password">
						</div>
					</div>
					<div wicket:id="signIn" class="ui fluid large primary submit button">Login</div>
				</div>
			</form>
		</div>
	</div>
</wicket:extend>