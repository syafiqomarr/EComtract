<wicket:extend>
	<form wicket:id="passwordForm" class="ui form">
		<div wicket:id="changePasswordInfo">
			<div class="ui red icon message">
				<i class="lock icon"></i>
				<div class="content">
					<div class="header">
						<wicket:message key="page.info.changePassword" />
					</div>
					<p>
						<wicket:message key="page.info.changePassword.detect" />
					</p>
				</div>
			</div>
			<br>
		</div>
		<div class="ui top attached segment">
			<div class="ui top attached label">
				<h4 class="ui header">
					<wicket:message key=base.title.change.Password />
				</h4>
			</div>
			<table>
				<tr>
					<td>
						<div class="field">
							<label><span wicket:id="passwordLabel"/></label>
							<input wicket:id="password" type="password" size="50" />
						</div>
					</td>
				</tr>
				<tr><td>&nbsp;</td></tr>
				
				<tr>
					<td>
						<div class="field">
							<label><span wicket:id="newPassword1Label"/></label>
							<input wicket:id="newPassword1" type="password" size="50" />
							<wicket:message key="user.page.userPwdPattern" />
						</div>
					</td>
				</tr>
				<tr><td>&nbsp;</td></tr>
				<tr>
					<td>
						<div class="field">
							<label><span wicket:id="newPassword2Label"/></label>
							<input wicket:id="newPassword2" type="password" size="50" />
						</div>
					</td>
				</tr>
				<tr><td>&nbsp;</td></tr>
				<tr>
					<td>
						<div class="inline field">
							<input wicket:id="save" class="ui primary button" type="submit" value="Save" /> 
							<input wicket:id="cancel" class="ui primary button" type="submit" value="Cancel" />
						</div>
					</td>
				</tr>		
			</table>
		</div>
	</form>
</wicket:extend>
