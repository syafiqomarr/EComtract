<wicket:extend>
	<form wicket:id="form">
		<div class="ui right aligned grid form">
			<div class="left floated left aligned six wide column">
				<div class="ui icon message">
					<i class="info circle icon"></i>
					<div class="content">
						<div class="header">
							<wicket:message key="page.lbl.ezbiz.resetPassword.name" />
						</div>
						<p>
							<span wicket:id="name">[name]</span>
						</p>
						<div class="header">
							<wicket:message key="page.lbl.ezbiz.resetPassword.icNo" />
						</div>
						<p>
							<span wicket:id="idNo">[idNo]</span>
						</p>
						<div class="header">
							<wicket:message key="page.lbl.ezbiz.resetPassword.hpNo" />
						</div>
						<p>
							<span wicket:id="hpNo">[hpNo]</span>
						</p>
						<div class="header">
							<wicket:message key="page.lbl.ezbiz.resetPassword.email" />
						</div>
						<p>
							<span wicket:id="email">[email]</span>
						</p>
					</div>
				</div>
			</div>
			<div class="left floated left aligned ten wide column">
				<div class="ui icon message">
					<i class="lock  icon"></i>
					<div class="content">
						<div class="header">
							<wicket:message key="page.lbl.ezbiz.resetPassword.newPassword" />
						</div>
						<p>
							<div class="ui action input">
								<input type="text" wicket:id="userPwd">
								<button class="ui teal right labeled icon button" wicket:id="generatePassword">
									<i class="refresh icon"></i> Generate Password
								</button>
							</div>
						</p>
						<wicket:message key="page.lbl.ezbiz.resetPassword.passwordInfo" /> 
						<br><br><br>
						<div class="left floated right aligned column">
							<button class="ui button negative" wicket:id="cancel">Cancel</button>
							<button class="ui button positive" wicket:id="submit">Submit</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</wicket:extend>