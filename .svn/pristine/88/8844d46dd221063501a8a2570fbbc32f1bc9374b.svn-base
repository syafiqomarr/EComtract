<script>
	(function($) {
		$.fn.sideFollow = function(dtime) {

			var floating = $(this);
			var originalTop = parseInt($(this).css('top'));

			dtime ? dtime = dtime : dtime = 1000;

			goFollow(); // é¡µé¢åŠ è½½åŽå…ˆæ‰§è¡Œä¸€æ¬¡

			// æ»šåŠ¨æ¡ç›‘æŽ§
			$(window).scroll(function() {
				goFollow();
			});

			function goFollow() {
				var scrollTop = $(this).scrollTop();
				floating.animate({
					top : originalTop + scrollTop
				}, {
					duration : dtime,
					queue : false
				});
			}

		}
	})(jQuery);

	$(document).ready(function() {

		// fix menu when passed
		$('#ourProduct').visibility({
			once : false,
			onBottomPassed : function() {
				$('.fixed.menu').transition('fade in');
			},
			onBottomPassedReverse : function() {
				$('.fixed.menu').transition('fade out');
			}
		});

		// create sidebar and attach to menu open
		$('.ui.sidebar').sidebar('attach events', '.toc.item');

		$('#home').click(function() {
			$('html, body').animate({
				scrollTop : $("#homeSeg").offset().top
			}, 1000);

		});

		$('#ourProduct').click(function() {
			$('html, body').animate({
				scrollTop : $("#ourProductSeg").offset().top
			}, 1000);

		});

		$('#contactUs').click(function() {
			$('html, body').animate({
				scrollTop : $("#contactUsSeg").offset().top
			}, 1000);

		});

		for (var i = 1; i < 3; i++) {
			var homeId = '#home' + (i + 1);
			var ourProductId = '#ourProduct' + (i + 1);
			var contactUsId = '#contactUs' + (i + 1);
			$(homeId).click(function() {
				$('html, body').animate({
					scrollTop : $("#homeSeg").offset().top
				}, 1000);

			});

			$(ourProductId).click(function() {
				$('html, body').animate({
					scrollTop : $("#ourProductSeg").offset().top
				}, 1000);

			});

			$(contactUsId).click(function() {
				$('html, body').animate({
					scrollTop : $("#contactUsSeg").offset().top
				}, 1000);

			});
		}

		$("#floatSeg").sideFollow();

		$('.ui.dropdown').dropdown();
	});

	function showLogin() {
		//alert($('#loginModal'));
		$('#loginModal').modal('show');
	}
	function showSignIn() {
		//alert($('#signInModal'));
		$('#signInModal').modal('show');
	}
	function showInternalLogin() {
		//$('#internalLoginModal').modal('show');
		var modalId = 'internalLoginModal';
		//alert(modalId);
		$('#'+modalId).modal('show');
		$('#'+modalId).css({top:'50%',left:'50%',margin:'-'+($('#'+modalId).height() / 2)+'px 0 0 -'+($('#'+modalId).width() / 2)+'px'});
	}
	
	function setBack() {
		$('#cartTotalDisplay').text($('#cartTotal').text());
		var urlPrefixPath = '';
		if(window.location.pathname.indexOf('EzBizWeb')!=-1){
			urlPrefixPath = "/EzBizWeb/";
		}	
		
		var bgPath = urlPrefixPath+'backgroundcss/SSM-Exterior-03_4098x2304.png';
		document.getElementById("firstSegment").style.backgroundImage = "url('"+bgPath+"')";
		
		//"background-size: cover; background-position: center; background-repeat: no-repeat; background-image: url('../../SSM-Exterior-03_4098x2304.png');
		
	}
	
</script>
<script>
		function addToCard(fromID ) {
			
			var target = $('#floatSeg');
			var originalEl = $('#'+fromID);
			//var cloneEl = originalEl.clone();
			
			var cloneEl = originalEl.clone().offset({
					top : originalEl.offset().top,
					left : originalEl.offset().left
				});
			
			cloneEl.css({
					'position' : 'absolute',
					'height' : originalEl.height() ,
					'width' : originalEl.width(),
					'z-index' : '100'
			});
			
			
			cloneEl.appendTo("body");
			originalEl.hide();
			
			cloneEl.animate({"border-radius": "70%"  }, 500 );
			
			cloneEl.animate({
					'height' : originalEl.height() / 2,
					'width' : originalEl.width() / 2
				}, 500,'easeInOutExpo', function() { sendElToCard(cloneEl, originalEl, target  ) });
			
		}	
			
		function sendElToCard(cloneEl, originalEl, target ) {
			cloneEl.animate({
					'top' : target.offset().top + 10,
					'left' : target.offset().left + 15
				}, 2000,'easeInOutExpo', function() { shakeAndShowButtonBack(cloneEl, originalEl, target  ) });
			
			
		}
		function shakeAndShowButtonBack(cloneEl, originalEl, target  ) {
			
			target.effect( "shake" );
			
			$('#cartTotalDisplay').text($('#cartTotal').text());
			
			cloneEl.animate({
					'width' : 0,
					'height' : 0
				}, function() {
					$(this).detach()
				});
			
			setTimeout( function() {originalEl.fadeIn('slow')}, 1000);
		}
		
		
	</script>
	
